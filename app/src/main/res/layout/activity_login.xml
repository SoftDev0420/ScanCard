<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    tools:context="com.cosential.cardreader.activity.LoginActivity">

    <ImageView
        app:layout_widthPercent="65.6%"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="13.6%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/im_logo"/>
    <LinearLayout
        app:layout_widthPercent="84.4%"
        app:layout_heightPercent="21.6%"
        app:layout_marginTopPercent="32.1%"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.333">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Username"
                android:background="@android:color/transparent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/elementSeparateColor"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.333">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/elementSeparateColor"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.334">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Firm Access Code"
                android:inputType="number"
                android:background="@android:color/transparent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/elementSeparateColor"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        app:layout_widthPercent="84.4%"
        app:layout_heightPercent="7.2%"
        app:layout_marginTopPercent="55.9%"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="@color/mainOrangeColor"/>
    <LinearLayout
        app:layout_widthPercent="84.4%"
        app:layout_heightPercent="6%"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
